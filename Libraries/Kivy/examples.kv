<MainScreen>:
    name: 'examples'
    FloatLayout:
        size_hint: None, None

		# QUIT BUTTON
        DPEAButton:
            id: X
            text: 'X'
            background_color: 0, 0, 0, 0        # Need to copy these three lines
            background_normal: ''               # of code to get rid of grey corners
            size_hint: None, None               # and be able to set the size
            size: 40, 40
            center_x: root.width * 0.97
            center_y: root.height * 0.955
            color: 1, 0, 0, 1
            on_press: root.XButtonDown()        # check examples.py file to see
            on_touch_up: root.resetColors()     # examples of how to change
            on_release: quit()                  # button color and process touches
        #ImageButton Example using standard DPEALabel
        ImageButton:
            center_x: root.width * 0.75
            center_y: root.height * 0.25
            on_release: root.manager.current = 'admin'

        Label:
            text:"Standard ImageButton\nTo use: import ImageButton\nYou can specify:\n      source\n      position\n      size\n      action\n "
            font_size: 25
            color: 1, 1, 1, 1
            bold: True
            outline_width: self.font_size * 0.1
            outline_color: 0, 0, 0, 1
            x: root.width * 0.75
            y: root.height * 0.5

        #Standard DPEAButton Example using standard DPEALabel
        DPEAButton:
            id: DPEAButton
            text: 'DPEA'
            background_color: 0, 0, 0, 0
            background_normal: ''
            size_hint: None, None
            size: 200, 100
            center_x: root.width * 0.25
            center_y: root.height * 0.25
            color: 0.019, 0.337, 1, 1
            on_press: root.DPEAButtonDown()
            on_release: root.DPEAButtonUp()
            on_touch_up: root.resetColors()

        Label:
            text:"Standard DPEAButton\nTo use: load DPEAButton.kv\nYou can specify:\n      text\n      color\n      position\n      size\n      action"
            font_size: 25
            color: 1, 1, 1, 1
            bold: True
            outline_width: self.font_size * 0.1
            outline_color: 0, 0, 0, 1
            x: root.width * 0.25
            y: root.height * 0.5
