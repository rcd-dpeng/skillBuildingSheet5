<MainScreen>:
    #: import time __main__.time

    name: 'main'
    FloatLayout:
        size_hint: None, None

    DPEAButton:
        id: test_button
        text: 'test'
        size: 100, 100
        x: root.width * 0.75
        y: root.height * 0.5
        color: 0, 1, 0, 1
        on_press: root.pressed()

    DPEAButton:
        text: "test2"
        size: 100, 100
        x: root.width * 0.25
        y: root.height * 0.5
        color: 1, 0, 0, 1
        on_press: root.stop_motor()

    SelfUpdatingLabel:
        id: joy_label
        size_hint: None, None
        font_size: 30
        text: str(root.stepper_property.get_position())
        update_property: None
        update_property_parameters: None
        center_x: root.width * 0.5
        center_y: root.height * 0.5
        color: 1, 1, 1, 1
        bold: True
        outline_width: self.font_size * 0.1
        outline_color: 0, 0, 0