<PauseScene>
    name: 'pauseScene'
    FloatLayout:
        size_hint: None, None
        canvas:
            Color:
                rgba: 0, 0, 0, .4
            Rectangle:
                size: root.size
                pos: 0, 0
            Color:
                rgba: 0, 0, 0, .8
            Rectangle:
                size: 150, 15
                pos: root.center_x - 75, root.center_y - 70

        Label:
            id: pauseText
            text: 'Paused'
            font_size: 40
            color: 1, 1, 1, 1
            bold: True
            outline_width: self.font_size * 0.1
            outline_color: 0, 0, 0, 1
            center: root.center

        Button:
            id: progressBar
            background_color: 1, 1, 1, 1
            background_normal: ''
            size_hint: None, None
            size: 15, 15
            x: root.center_x - 75
            y: root.center_y - 70
